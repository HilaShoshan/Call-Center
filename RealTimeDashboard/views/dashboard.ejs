    }];
  
    topicSource = [];
    <%for (let topic in groupedByTopic) {%>
      topicSource.push({
        topic:"<%=topic%>" ,
        amount: <%= groupedByTopic[topic] %>
      });
    <% } %>

    numOfCalls = [];
    <%for (let fiveMin of allDaySegment ) {%>
      numOfCalls.push({
        hour: "<%= fiveMin.getHour() %>" ,
