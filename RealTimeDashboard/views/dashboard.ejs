  <hr>

  <div id="header-of-board">
    <h1>This DashBoard Restarts Every 24 Hours</h1>
    </br>
    <h1>Date of Data: <%= date %></h1>
  </div>

  <!-- wating calls section -->
  <section id="watingSection">
    <h3 class="my-h3">Number Of Waiting Calls In REAL TIME & Average Waiting Time In Last 10 Minutes</h3>
    <div class="card-deck">
      <div class="card">
        <div class="card-header">
          <i class="fas fa-phone graphFontAusomeIcon"></i>Number Of Waiting Calls In REAL TIME
        </div>
        <div class="card-body">
          <div id="chart"></div>
        </div>
      </div>
      <div class="card">
        <div class="card-header">
          <i class="far fa-clock graphFontAusomeIcon"></i>Average Waiting Time In Last 10 Minutes</h4>
        </div>
        <div class="card-body">
          <div id="timeWatingChart"></div>
        </div>
      </div>
    </div>
  </section>
  <hr>


  <!-- number of calls acording to topic table section -->
  <section id="callsInfoSection">
    <h3 class="my-h3">Number Of Calls Split Based On Call Topic </h3>
    <table class="table table-sm table-hover table-bordered">
      <thead class="thead-ligh">
        <tr>
          <th scope="col">Topic</th>
          <th scope="col">Join</th>
          <th scope="col">Service</th>
          <th scope="col">Complaint</th>
          <th scope="col">Disconnect</th>
        
          <th scope="col">Total Calls</th>
        </tr>
        <tr>
          <th>Total</th>
          <td id="c00"><%=groupedByTopic['join']%></td>
          <td id="c01"><%=groupedByTopic['service']%></td>
          <td id="c02"><%=groupedByTopic['complaint']%></td>
          <td id="c03"><%=groupedByTopic['disconnect']%></td>
          <%let sum = 0 %>
          <%for (let topic in groupedByTopic){%>
           <% sum += groupedByTopic[topic]%>
          <%}%>
          <td id="c04"><%=sum%></td>
        </tr>
      </thead>
      
    </table>
  </section>
  <hr>


 

  <!-- topic distribution section-->
  <section id="topicDistribution">
    <h3 class="my-h3">Number Of Calls Split Based On Call Topic</h3>
    <div class="demo-container">
      <div id="topicChart">
        
      </div>
    </div>
  </section>
  <hr>

  <!-- number of calls 5 minutes aregration section -->
  <section id="aregrationSection">
    <h3 class="my-h3">Number Of Active Calls - During All Day, Split To 5 Minutes Segments</h3>
    <div class="demo-container">
      <div id="fiveMinAmountChart">
      </div>
    </div>

    <div class="table-wrapper-scroll-y my-custom-scrollbar" id="aregrationSection-table">
      <table class="table table-sm my-agrationTable">
        <thead>
          <tr>
            <th scope="col">hour</th>
            <th scope="col">amount</th>
          </tr>
        </thead>
        <tbody>

          <%for (let fiveMin of allDaySegment) {%>
          <tr>
            <%let hour = fiveMin.getHour();%>
            <%let value = fiveMin.getCount(); %>
            <td> <%=hour%> </td>
             <%let id = hour + "-ActiveCalls"; %>
            <td id='<%=id%>'> <%=value%></td>
          </tr>
          <% }%> 
        </tbody>
      </table>
    </div>
  </section>
  <hr>

  <!-- wating time 5 minutes aregration section -->
  <section id="timeAgregationSection">
    <h3 class="my-h3">Average Waiting Time Of Active Calls - During All Day Split To 5 Minutes Segments</h3>
    <div class="demo-container">
      <div id="fiveMinWatingChart">
      </div>
    </div>

    <div class="table-wrapper-scroll-y my-custom-scrollbar" id="timeAgregationSection-table">
      <table class="table table-sm my-agrationTable">
        <thead>
          <tr>
            <th scope="col">hour</th>
            <th scope="col">minutes</th>

          </tr>
        </thead>
        <tbody>

          <%for (let fiveMinWaiting of allDaySegment) { %>
          <tr>
             <%let hour = fiveMinWaiting.getHour(); %>
             <%let avgTime = fiveMinWaiting.getAvgWaitingTime(); %>
             <%let id = hour + "-Waiting"; %>
            <th scope="row"> <%=hour%> </th>
            <td id='<%=id%>'> <%=avgTime%></td>
          </tr>
          <% } %> 
        </tbody>
      </table>
    </div>
  </section>
  <hr>

